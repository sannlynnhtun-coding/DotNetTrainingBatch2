@using static AKLMPSTYZDotNetCore.MvcApp.Models.KKChartsModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	string _title = Model.Title;
	List<KKDataPointsModel> _dataPoints = Model.DataPoints;
}
<div id="chartContainer" style="height: 300px; width: 100%;"></div>


@section scripts {

	<script>

		const _title = @(Html.Raw(JsonConvert.SerializeObject(_title)));
		const _dataPoints = @(Html.Raw(JsonConvert.SerializeObject(_dataPoints)));

		window.onload = function () {

			var chart = new CanvasJS.Chart("chartContainer", {
				animationEnabled: true,
				exportEnabled: true,
				theme: "light2",
				title: {
					text: _title
				},
				data: [{
					type: "pyramid",
					toolTipContent: "<b>{label}</b>: {y}%",
					indexLabelFontColor: "#5A5757",
					indexLabelFontSize: 16,
					indexLabel: "{label}({y}%)",
					indexLabelPlacement: "inside",
					dataPoints: _dataPoints
				}]
			});
			chart.render();

		}
	</script>
}